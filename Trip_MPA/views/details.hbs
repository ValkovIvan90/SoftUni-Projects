{{#with trip}}
<main>
    <section class="py-5 details" id="trip-details-page">
        <div class="container">
            <div class="destination">
                <div>
                    <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                    <h5> from <span>{{startPoint}}</span> to <span>{{endPoint}}</span> </h5>
                </div>
                <div>
                    <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                    <h5> <span>{{date}}</span> at <span>{{time}}</span> </h5>
                </div>
            </div>
            <p class="line"></p>
            <div class="buddies-info">
                <i class="fas fa-users buddies"></i>
                <h5>Shared trip Buddies</h5>
                <div>
                    {{#each buddies}}
                    <p>{{this.email}}</p>
                    {{else}}
                    <p>there are no buddies yet...</p>
                    {{/each}}
                </div>
                <h5>Driver: <span>{{email}}</span> </h5>
            </div>
            <p class="line"></p>
            <h5 class="brand">Car Brand: <span class="lead">{{brand}}</span></h5>
            <div class="trip-info">
                <div>
                    <img class="img-fluid rounded"
                        src="https://www.nastarta.com/wp-content/uploads/2018/04/Mercedes-Benz-A-Class-2019-1280-3d.jpg"
                        alt="car-image">
                </div>
                <div class="trip-desc">
                    <h5>Information about the trip</h5>
                    <textarea class="lead" disabled>{{description}}</textarea>
                    <h5>Price: <span class="lead">{{price}}</span> BGN</h5>


                    {{#if user}}
                    <div class="actions">
                        {{#if isOwner}}
                        <a href="/products/delete/{{_id}}" class="btn btn-danger">Delete this trip</a>
                        <a href="/products/edit/{{_id}}" class="btn btn-warning">Edit this trip</a>
                        {{else}}
                        {{#if isJoin}}
                        <span class="btn btn-info">Already joined. Don't be late!</span>
                        {{else}}
                        {{#if noSeats}}
                        <span class="btn btn-secondary">No seats available! {{seats}}</span>
                        {{else}}
                        <a href="/products/details/{{_id}}/join" class="btn btn-join">Join now, {{seats}} seats
                            left!</a>
                        {{/if}}
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}


                </div>
            </div>
        </div>
    </section>
</main>
{{/with}}