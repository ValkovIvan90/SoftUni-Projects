<form class="theater-form" action="/products/create" method="POST">
    <h1>Create Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" name="title" value="{{playData.title}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description">{{playData.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="Image Url" name="imageUrl" value="{{playData.imageUrl}}">
    </div>
    <div class="check">
        <label for="check-box">Public</label>
        <input type="checkbox" id="check-box" name="isPublic" {{#if isPublic}}checked{{/if}}>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>