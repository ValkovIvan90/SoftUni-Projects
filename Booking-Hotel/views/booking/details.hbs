{{#with hotel}}
<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{imageUrl}}" alt="">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{name}}</h3>
            </div>
            <div>
                {{city}}
            </div>
            <p><span>Free rooms: {{rooms}}</span> </p>


            {{#if isOwner}}
            <a href="/products/edit/{{_id}}" class="edit">Edit</a>
            <a href="/products/delete/{{_id}}" class="remove">Delete</a>
            {{else}}
            {{#if isCheked}}
            <p><span class="green">You already have booked a room</span> </p>
              {{else}}
            <a href="/products/details/{{_id}}/book" class="book">Book</a>
            {{/if}}
            {{/if}}

        </div>
    </div>
</section>
{{/with}}